{
  "manifest_version": 3,
  "name": "Sa.AI for Gmail",
  "version": "2.1",
  "description": "AI-powered Gmail assistant with n8n integration for inbox summarization, thread summarization, voice modeand task management",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "identity",
    "alarms"
  ],

  "host_permissions": [
    "https://mail.google.com/*",
    "https://www.googleapis.com/*",
    "https://connector.saai.dev/*",
    "https://accounts.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sa.AI for Gmail"
  },
  "icons": {
    "16": "icons/icon 16.jpg",
    "48": "icons/icon 48.png",
    "128": "icons/icon 128.png"
  },
  "minimum_chrome_version": "88",
  "short_name": "Sa.AI",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "debug.html"],
      "matches": ["https://mail.google.com/*", "<all_urls>"]
    }
  ]
}
